	<!-- the deploy repositories: normal/snapshot/site generation 
		make sure the prorper rights for the given IDs are set in 
		the user's settings.xml -->
	<distributionManagement>
		<!-- normal versions -->
		<repository>
			<id>semweb4j-repo</id>
			<name>semweb4j.org maven repository server</name>
			<url>scp://${semweb4j.repo}</url>
			<uniqueVersion>false</uniqueVersion>
		</repository>
		<!-- snapshots -->
		<snapshotRepository>
			<id>semweb4j-snapshots</id>
			<name>semweb4j.org maven SNAPSHOT repository server</name>
			<url>scp://${semweb4j.snapshots}</url>
			<uniqueVersion>true</uniqueVersion>
		</snapshotRepository>

		<!--  Note: site url is not inherited, but effective locally
			So this block is copy & paste correct from now on -->
		<site>
			<id>semweb4j-site</id>
			<name>semweb4j.org site server</name>
			<!--  mvn creates new dirs if necessary -->
			<url>scp://${semweb4j.site}/${artifactId}</url>
		</site>
	</distributionManagement>

