<assembly>
	<!-- 
		
		jar, dependencies as jar, src.zip
		
	-->
	<id>lib</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/jar</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<!-- exclude the unnecessary dist.jar -->
			<excludes>
				<exclude>org.semweb4j:rdf2go.dist</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	

	<fileSets>
		<!--  include src.zip -->
 		<fileSet>
			<directory>target</directory>
			<includes>
				<include>src.zip</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<!--  include /apidocs -->
		<fileSet>
			<directory>target/site/apidocs</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
			<outputDirectory>/javadoc</outputDirectory>
		</fileSet>
	</fileSets>

	<!--  include README.txt -->
	

</assembly>