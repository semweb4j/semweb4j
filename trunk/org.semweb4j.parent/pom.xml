	<!--  #######################################################
		Remote repositories and connections  
		######################################################### -->


	<repositories>
		<repository>
			<id>theoretiker</id>
			<name>Semweb4j.org maven repo</name>
			<url>http://semweb4j.org/repo/</url>
		</repository>
		<repository>
			<id>theoretiker</id>
			<name>Semweb4j.org maven repo</name>
			<url>http://semweb4j.org/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
		</repository>

		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<id>aduna-repo</id>
			<name>Aduna Repository</name>
			<url>http://repository.aduna-software.org/maven2</url>
		</repository>

	</repositories>

	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>theoretiker</id>
			<name>Semweb4j.org maven repo</name>
			<url>
				scp://theoretiker.org/home/max/public_html/semweb4j.org/repo
			</url>
			<uniqueVersion>false</uniqueVersion>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>theoretiker</id>
			<name>Semweb4j.org maven SNAPSHOT repo</name>
			<url>
				scp://theoretiker.org/home/max/public_html/semweb4j.org/snapshots
			</url>
			<uniqueVersion>true</uniqueVersion>
		</snapshotRepository>
		<site>
			<id>theoretiker</id>
			<name>Semweb4j site</name>
			<!--  mvn creates new dirs if necessary -->
			<url>
				scp://theoretiker.org/home/max/public_html/semweb4j.org/site
			</url>
		</site>
	</distributionManagement>

	<properties>
		<!--  user access, no trailing slash -->
		<svn.user>http://semweb4j.googlecode.com/svn</svn.user>
		<!--  developer access, no trailing slash -->
		<svn.dev>https://semweb4j.googlecode.com/svn</svn.dev>
		<svn.projectname>org.semweb4j.parent</svn.projectname>
	</properties>

	<scm>
		<connection>scm:svn:http://semweb4j.googlecode.com/svn/trunk/org.semweb4j.parent</connection>
		<developerConnection>scm:svn:https://semweb4j.googlecode.com/svn/org.semweb4j.parent</developerConnection>
		<url>http://semweb4j.googlecode.com/svn/org.semweb4j.parent</url>
	</scm>

	<!--  inherited and effective -->
	<dependencies>
		<!--  don't inherit dependencies! -->
	</dependencies>

	<build>
		<plugins>
			<!-- @@ configure tag base -->
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
				<!--  tag base MAY NOT contain scm:svn: prefix -->
					<tagBase>${svn.dev}/tags</tagBase>
				</configuration>
			</plugin>

			<!-- Use Java 1.5 everywhere -->
			<plugin>
				<inherited>true</inherited>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<target>1.5</target>
					<source>1.5</source>
				</configuration>
			</plugin>

			<!-- needed to run Junit 4.x tests -->
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.3</version>
			</plugin>

			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<url>http://semweb4j.org/repo</url>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>